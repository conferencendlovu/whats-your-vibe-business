<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="@color/colorAccent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            app:civ_border_width="1dp"
            android:src="@drawable/logo"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_event_tvEventName"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:maxLines="1"
                android:textSize="26sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_event_tvEventDescription"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:maxLines="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_event_tvEventDate"
                    android:drawableTop="@drawable/calender"
                    android:drawablePadding="10dp"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_event_tvEventShares"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/shares"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_event_tvEventGoing"
                    android:drawableTop="@drawable/going"
                    android:drawablePadding="10dp"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>