<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_gradient_background"
    android:orientation="vertical"
    tools:context=".activities.event.EventLocationActivity">

    <include
        android:id="@+id/event_location_toolbar"
        layout="@layout/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/colorTextButton"
                android:gravity="center"
                android:textSize="28sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="Where is your event happening and when?."
                />

            <Button
                android:background="@drawable/round_corner_border"
                android:onClick="selectLocation"
                android:padding="10dp"
                android:text="Set Event Location"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="Select Time"
                android:background="@drawable/round_corner_border"
                android:onClick="selectTime"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:background="@drawable/round_corner_border"
                android:onClick="selectDate"
                android:padding="10dp"
                android:text="Select Date"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp" />


            <TextView
                android:visibility="gone"
                android:text="LOCATION"
                android:id="@+id/activity_event_location_tvLocationLabel"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/activity_event_location_tvLocation"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="270dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/activity_event_location_tvDateLabel"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:text="DATE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/activity_event_location_tvDate"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/activity_event_location_tvTimeLabel"
                android:layout_marginTop="10dp"
                android:text="TIME"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:id="@+id/activity_event_location_tvTime"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button

                android:id="@+id/event_location_btnNext"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="Next"
                android:textColor="#fff"
                android:textSize="22sp"
                android:background="@drawable/round_button_border"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>