<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_gradient_background"
    tools:context=".activities.authentication.SignUpActivity">

    <ImageView
        android:id="@+id/sign_up_ivClose"
        android:layout_margin="15dp"
        android:src="@drawable/close"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_width="90dp"
        android:layout_height="90dp" />


    <TextView
        android:id="@+id/sign_up_tvGetOnBoardHeading"
        android:layout_marginTop="15dp"
        android:textColor="#fff"
        android:layout_marginBottom="15dp"
        android:textSize="28sp"
        android:layout_gravity="center_horizontal"
        android:text="Get On Board!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_gravity="center_horizontal"
        android:scrollbars="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/text_field_background"
                android:id="@+id/sign_up_tilBusinessName"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:hint="Business Name" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:id="@+id/sign_up_tilBusinessEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:inputType="textEmailAddress"
                    android:hint="Business Email Address" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:id="@+id/sign_up_tilPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:inputType="textPassword"
                    android:hint="Create Password" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:id="@+id/sign_up_tilConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:inputType="textPassword"
                    android:hint="Confirm Password" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/sign_up_btnCreateAccount"
                android:textColor="#fff"
                android:background="@drawable/primary_button_background"
                android:text="Create Account"
                android:layout_gravity="center_horizontal"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>